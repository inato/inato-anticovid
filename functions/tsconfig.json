{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDirs": ["src"],
    "outDir": "lib",
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "incremental": true
  }
}
